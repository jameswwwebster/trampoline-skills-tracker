# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/trampoline_tracker"

# JWT Configuration
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRE="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"

# Frontend URL (for CORS and email links)
FRONTEND_URL="http://localhost:3000"

# Email Configuration (optional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@trampolinetracker.com"

# Development Database (alternative to DATABASE_URL for local development)
# If you prefer to use individual database components:
# DB_HOST="localhost"
# DB_PORT=5432
# DB_NAME="trampoline_tracker"
# DB_USER="postgres"
# DB_PASS="password"
